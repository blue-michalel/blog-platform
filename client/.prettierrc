{
  "printWidth": 120,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "bracketSameLine": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^(containers(.*)|features(.*)|store(.*)|services(.*)|hooks(.*)|handlers(.*))$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "jsxBracketSameLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "trailingComma": "none"
}
